@model Ksiegarnia.Models.BookModel

@{
    ViewData["Title"] = "Details";
}

<div class="container">
    <div class="row">
        <div class="col-md-4">
            <img class="img-fluid" src="@Model.Image"/>
        </div>
        <div class="col-md-8">
            <h2>@Model.Title</h2>
            <p class="h3 text-orange">@Model.Author</p>
            <hr />
            <div class="d-flex flex-row align-items-center">
                <p class="h4 p-0 m-0 mr-4">@Model.Price zł</p>
                <a asp-action="AddToBasket" asp-route-id="@Model.Id">
                    <div class="btn btn-outline-orange">
                        <span class="mr-1">
                            <i class="fas fa-shopping-basket"></i>
                        </span>
                        Dodaj do koszyka
                    </div>
                </a>
            </div>
            <hr />
            <p class="mt-2">
                Wydawnictwo: @Model.Publisher<br />
                Data wydania: @Model.ReleaseDate
            </p>
            <p>
                @Model.Description
            </p>
            <hr />
            <a class="text-orange" asp-action="Edit" asp-route-id="@Model.Id">Edycja</a> |
            <a class="text-orange" asp-action="Index" asp-route-id="@null">Lista książek</a> |
            <a class="text-orange" asp-action="Delete" asp-route-id="@Model.Id">Usuń</a> |
        </div>
        <hr />
    </div>
    <div>

    </div>
</div>


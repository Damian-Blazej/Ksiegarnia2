<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Ksiegarnia</title>
    <link href="https://fonts.googleapis.com/css?family=Playfair+Display:400,700|Roboto&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/main.css" />
    <script src="https://kit.fontawesome.com/54bb3e4cb8.js" crossorigin="anonymous"></script>
</head>
<body>
    <header>
        <nav aria-label="upper-nav" class="py-3">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-md-4 col-xl-6">
                        <a asp-controller="Home" asp-action="Index">
                            <img src="~/img/logo.png" width="225" height="auto" />
                        </a>
                    </div>
                    <div class="col-md-8 col-xl-6">
                        <div class="float-right">
                            <a>
                                <span class="mr-1" style="color: #ff8b23">
                                    <i class="fas fa-phone"></i>
                                </span>
                                +48 603 215 146
                            </a>
                            <partial name="_LoginPartial" />
                        </div>
                    </div>
                </div>
            </div>
        </nav>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom border-top box-shadow mb-3">
            <div class="container">
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item pr-5">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">O nas</a>
                        </li>
                        <li class="nav-item pr-5">
                            <a class="nav-link" asp-area="" asp-controller="Book" asp-action="Index">Nasza oferta</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Contact">Kontakt</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
        <main role="main" class="pb-3">
            @RenderBody()
        </main>

    <footer class="border-top footer text-muted">
        <div class="container py-3" style="line-height: 30px">
            &copy; 2020 - Ksiegarnia - <a asp-area="" asp-controller="Home" asp-action="Privacy" style="color: #ff8b23;">Privacy</a><br />
            Created my free logo at <a href="https://logomakr.com/" style="color: #ff8b23;">LogoMakr.com</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
